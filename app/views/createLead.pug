extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action="/create/leads", method="POST", class="card", style="padding: 2rem; border: 1px solid #212529; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="name") Name:
          input.form-control(type="text", name="name", required)
        div.mb-3
          label.form-label(for="email") Email:
          input.form-control(type="email", name="email", required)
        div.mb-3
          label.form-label(for="phone") Phone:
          input.form-control(type="tel", name="phone", placeholder="e.g. 123-456-7890", pattern="^[0-9]{3}-[0-9]{3}-[0-9]{4}$", required)
        div.mb-3
          label.form-label(for="source") Source:
          select.form-control(name="source", required)
            option(value="") -- Select a Source --
            option(value="Referral") Referral
            option(value="Facebook") Facebook
            option(value="Nextdoor") Nextdoor
            option(value="Cold Call") Cold Call
        div.mb-3
          label.form-label(for="status") Status:
          select.form-control(name="status", required)
            option(value="") -- Select a Status --
            option(value="New") New
            option(value="Contacted") Contacted
            option(value="Converted") Converted
            option(value="Lost") Lost
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Create Lead
          a(href="/get/leads", class="btn btn-info mt-3 ms-3") Back to Lead List