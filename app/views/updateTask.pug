extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action=`/update/tasks/${task.id}`, method="POST", class="card", style="padding: 2rem; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="project_id") Project:
          input.form-control(type="text", name="project_id", required, value=task.project_id)
        div.mb-3
          label.form-label(for="assigned_to") Assigned To:
          input.form-control(type="text", name="assigned_to", value=task.assigned_to)
        div.mb-3
          label.form-label(for="description") Description:
          input.form-control(type="text", name="description", value=task.description)
        div.mb-3
          label.form-label(for="status") Status:
          input.form-control(type="text", name="status", value=task.status)
        div.mb-3
          label.form-label(for="created_at") Creation Date:
          - let displayDate = new Date(task.created_at).toLocaleDateString()
          input.form-control(type="text", name="created_at", value=displayDate, readonly)
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Save
          a(href=`/get/tasks/${task.id}`, class="btn btn-info mt-3 ms-3") Cancel