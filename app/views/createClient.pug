extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action="/create/clients", method="POST", class="card", style="padding: 2rem; border: 1px solid #212529; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="name") Name:
          input.form-control(type="text", name="name", required)
        div.mb-3
          label.form-label(for="email") Email:
          input.form-control(type="email", name="email", required)
        div.mb-3
          label.form-label(for="phone") Phone:
          input.form-control(type="tel", name="phone", placeholder="e.g. 123-456-7890", pattern="^[0-9]{3}-[0-9]{3}-[0-9]{4}$", required)
        div.mb-3
          label.form-label(for="company_name") Company:
          input.form-control(type="text", name="company_name", required)
        div.mb-3
          label.form-label(for="website_url") Website URL:
          input.form-control(type="text", name="website_url")
        div.mb-3
          label.form-label(for="status") Status:
          select.form-control(name="status", required)
            option(value="") -- Select a Status --
            option(value="Lead") Lead
            option(value="Active") Active
            option(value="Inactive") Inactive
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Create Client
          a(href="/get/clients", class="btn btn-info mt-3 ms-3") Back to Client List