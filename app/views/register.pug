extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action="/register", method="POST", class="card", style="padding: 2rem; border: 1px solid #212529; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="username") Username:
          input.form-control(type="text", name="username", required)
        div.mb-3
          label.form-label(for="password") Password:
          input.form-control(type="password", name="password", required)
        div.mb-3
          label.form-label(for="email") Email:
          input.form-control(type="email", name="email")
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Register
          a(href="/", class="btn btn-info mt-3 ms-3") Home Page