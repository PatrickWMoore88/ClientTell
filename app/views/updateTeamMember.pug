extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action=`/update/team_members/${teamMember.id}`, method="POST", class="card", style="padding: 2rem; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="name") Name:
          input.form-control(type="text", name="name", required, value=teamMember.name)
        div.mb-3
          label.form-label(for="email") Email:
          input.form-control(type="email", name="email", value=teamMember.email)
        div.mb-3
          label.form-label(for="phone") Phone:
          input.form-control(type="text", name="phone", value=teamMember.phone)
        div.mb-3
          label.form-label(for="role") Role:
          input.form-control(type="text", name="role", value=teamMember.role)
        div.mb-3
          label.form-label(for="created_at") Team Member Since:
          - let displayDate = new Date(teamMember.created_at).toLocaleDateString()
          input.form-control(type="date", name="created_at", value=displayDate, readonly)
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Save
          a(href=`/get/team_members/${teamMember.id}`, class="btn btn-info mt-3 ms-3") Cancel