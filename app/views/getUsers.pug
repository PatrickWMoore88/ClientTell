extends layout 

block content
    h1.text-center.my-4(style="padding: 50px;")= title
    div.container.d-flex.justify-content-center.mt-4
      div(style= 'box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);').table-card.p-4
        table.table.table-striped 
          thead 
            tr 
              th(scope="col", style="padding-right: 20px") ID
              th(scope="col", style="padding-left: 15px") Username
              th(scope="col", style="padding-left: 70px") Email Address
              th(scope="col", style="padding-left: 25px") Member Since
              th(scope="col")
          tbody 
            each user in users 
              tr 
                td
                  a(href=`/get/users/${user.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-right: 30px")= user.id 
                td 
                  a(href=`/get/users/${user.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= user.username.toUpperCase()
                td
                  a(href=`/get/users/${user.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= user.email 
                td
                  a(href=`/get/users/${user.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 40px")= user.member_since instanceof Date ? user.member_since.toLocaleDateString() : user.member_since
                td(style="padding-left: 41px")
                  a.btn.btn-info.btn-sm(href=`/get/users/${user.id}`) View
        div.p-4.d-flex.justify-content-end
          a.btn.btn-info(href='/create/users') Create New