extends layout

block content
  div.container.mt-5
    h1.text-center #{client.name}
    p.text-center #{client.email} | #{client.phone} | #{client.website_url}

    h3.mt-4 Projects
    each data in relatedData
      if data.project_id
        div.card.p-4.mb-3
          h4 #{data.project_name}
          p Status: #{data.project_status}

    h3.mt-4 Invoices
    each data in relatedData
      if data.invoice_id
        div.card.p-4.mb-3
          p Amount: $#{data.amount}
          p Due Date: #{data.due_date}
          p Status: #{data.invoice_status}

    h3.mt-4 Marketing Campaigns
    each data in relatedData
      if data.campaign_id
        div.card.p-4.mb-3
          p Type: #{data.campaign_type}
          p Name: #{data.campaign_name}
