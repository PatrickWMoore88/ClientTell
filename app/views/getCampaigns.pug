extends layout 

block content
    h1.text-center.my-4(style="padding: 50px;")= title
    div.container.d-flex.justify-content-center.mt-4
      div(style= 'box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);').table-card.p-4
        table.table.table-striped 
          thead 
            tr
              th(scope="col", style="padding-left: 15px") Name
              th(scope="col", style="padding-left: 20px") Client
              th(scope="col", style="padding-left: 25px") Type
              th(scope="col", style="padding-right: 20px") Budget
              th(scope="col", style="padding-right: 20px") Start Date
              th(scope="col", style="padding-right: 20px") End Date
              th(scope="col", style="padding-right: 20px") Status
              th(scope="col")
          tbody 
            each campaign in campaigns 
              tr
                td 
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= campaign.name
                td
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= campaign.client_id
                td
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 40px")= campaign.type
                td
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= campaign.budget
                td 
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= campaign.start_date instanceof Date ? campaign.start_date.toLocaleDateString() : campaign.start_date
                td
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= campaign.end_date instanceof Date ? campaign.end_date.toLocaleDateString() : campaign.end_date
                td
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-right: 30px")= campaign.status 
                td 
                  a(href=`/get/campaigns/${campaign.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= campaign.created_at instanceof Date ? campaign.created_at.toLocaleDateString() : campaign.created_at
                td(style="padding-left: 41px")
                  a.btn.btn-info.btn-sm(href=`/get/campaigns/${campaign.id}`) View
        div.p-4.d-flex.justify-content-end
          a.btn.btn-info(href='/create/campaigns') Create New Campaign