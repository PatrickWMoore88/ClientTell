doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    body
        div.header
            nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
                div.container
                    a.navbar-brand(href="/") ClientTell CRM
                
                button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
                    span.navbar-toggler-icon
                div#navbarNav.collapse.navbar-collapse
                    ul.navbar-nav.ms-auto
                        li.nav-item
                            a.nav-link(href="/about" style="color: white") About Us
                        li.nav-item
                            a.nav-link(href="/contact" style="color: white") Contact Us
                        if user
                            li.nav-item
                                form(method="POST", action="/logout", style="margin: 0;")
                                    button.btn.nav-link(type="submit", style="color: white;") Log Out
                            if user.username = admin
                                li.nav-item
                                    a.nav-link(href="/status" style="color: white") Status
                        else
                            li.nav-item
                                a.nav-link(href="/login", style="color: white") Log In
                        
                nav.navbar
                    button#menuToggle.hamburger(type="button" aria-label="Toggle Menu")
                        span
                        span
                        span

                    ul#mobileNav.nav-links.mobile
                        li: a(href="/") Home
                        li: a(href="/about") About
                        li: a(href="/contact") Contact
                
        div.main
            block content
        div.footer
            footer.bg-dark.text-white.p-3.text-center.mt-5
                //- p &copy; 2025 ClientTell. All rights reserved.
                p 2025 ClientTell. All rights reserved.
        
        script.
            document.addEventListener("DOMContentLoaded", () => {
                const menuToggle = document.getElementById("menuToggle");
                const mobileNav = document.getElementById("mobileNav");

                menuToggle.addEventListener("click", () => {
                    mobileNav.classList.toggle("show");
                });
            });

            window.addEventListener('scroll', function() {
                const navbar = document.querySelector('.navbar');
                if (window.scrollY > 50) {
                    navbar.classList.add('navbar-scrolled');
                } else {
                    navbar.classList.remove('navbar-scrolled');
                }
            });
        
        block scripts