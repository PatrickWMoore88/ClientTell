extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action=`/update/users/${user.id}`, method="POST", class="card", style="padding: 2rem; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="username") Username:
          input.form-control(type="text", name="username", required, value=user.username)
        div.mb-3
          label.form-label(for="password") New Password:
          input.form-control(type="password", name="password")
        div.mb-3
          label.form-label(for="email") Email:
          input.form-control(type="email", name="email", value=user.email)
        div.mb-3
          label.form-label(for="member_since") Member Since:
          - let displayDate = new Date(user.member_since).toLocaleDateString()
          input.form-control(type="date", name="member_since", value=displayDate, readonly)
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Save
          a(href=`/get/users/${user.id}`, class="btn btn-info mt-3 ms-3") Cancel
