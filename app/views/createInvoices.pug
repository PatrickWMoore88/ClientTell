extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action="/create/invoices", method="POST", class="card", style="padding: 2rem; border: 1px solid #212529; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="client_id") Client:
          input.form-control(type="text", name="client_id", required)
        div.mb-3
          label.form-label(for="project_id") Project:
          input.form-control(type="text", name="project_id", required)
        div.mb-3
          label.form-label(for="amount") Amount:
          input.form-control(type="text", name="amount")
        div.mb-3
          label.form-label(for="status") Status:
          input.form-control(type="text", name="status")
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Create Invoice
          a(href="/get/invoices", class="btn btn-info mt-3 ms-3") Back to Invoice List