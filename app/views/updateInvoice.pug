extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action=`/update/invoices/${invoice.id}`, method="POST", class="card", style="padding: 2rem; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="client_id") Client:
          input.form-control(type="text", name="client_id", required, value=invoice.client_id)
        div.mb-3
          label.form-label(for="project_id") Project:
          input.form-control(type="text", name="project_id", required, value=invoice.project_id)
        div.mb-3
          label.form-label(for="amount") Amount:
          input.form-control(type="text", name="amount", value=invoice.amount)
        div.mb-3
          label.form-label(for="status") Status:
          input.form-control(type="text", name="status", value=invoice.status)
        div.mb-3
          label.form-label(for="issued_at") Issued Date:
          - let displayIssueDate = new Date(invoice.issued_at).toLocaleDateString()
          input.form-control(type="text", name="issued_at", value=displayIssueDate, readonly)
        div.mb-3
          label.form-label(for="due_date") Due Date:
          - let displayDueDate = new Date(invoice.due_date).toLocaleDateString()
          input.form-control(type="text", name="due_date", value=displayDueDate, readonly)
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Save
          a(href=`/get/invoices/${invoice.id}`, class="btn btn-info mt-3 ms-3") Cancel