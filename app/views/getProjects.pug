extends layout 

block content
    h1.text-center.my-4(style="padding: 50px;")= title
    div.container.d-flex.justify-content-center.mt-4
      div(style= 'box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);').table-card.p-4
        table.table.table-striped 
          thead 
            tr 
              th(scope="col", style="padding-left: 15px") Name
              th(scope="col", style="padding-left: 25px") Start Date
              th(scope="col", style="padding-right: 20px") Deadline
              th(scope="col", style="padding-left: 70px") Status
              th(scope="col")
          tbody 
            each project in projects 
              tr
                td 
                  a(href=`/get/projects/${project.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= project.name.toUpperCase()
                td
                  a(href=`/get/projects/${project.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 40px")= project.start_date
                td
                  a(href=`/get/projects/${project.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-right: 30px")= project.deadline
                td
                  a(href=`/get/projects/${project.id}`, style="color: white; font-weight: bold; text-decoration: none; padding-left: 20px")= project.status
                td(style="padding-left: 41px")
                  a.btn.btn-info.btn-sm(href=`/get/projects/${project.id}`) View
        div.p-4.d-flex.justify-content-end
          a.btn.btn-info(href='/create/projects') Create New Project