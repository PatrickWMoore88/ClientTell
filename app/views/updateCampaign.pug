extends layout

block content
    h1.text-center.mt-4(style="padding: 50px;")= title
    div
      form(action=`/update/campaigns/${campaign.id}`, method="POST", class="card", style="padding: 2rem; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 2rem;")
        div.mb-3
          label.form-label(for="client_id") Client:
          input.form-control(type="text", name="client_id", required, value=campaign.client_id)
        div.mb-3
          label.form-label(for="name") Name:
          input.form-control(type="text", name="name", required, value=campaign.name)
        div.mb-3
          label.form-label(for="type") Type:
          input.form-control(type="text", name="type", value=campaign.type)
        div.mb-3
          label.form-label(for="budget") Budget:
          input.form-control(type="text", name="budget", value=campaign.budget)
        div.mb-3
          label.form-label(for="start_date") Start Date:
          - let displayStartDate = new Date(campaign.start_date).toLocaleDateString()
          input.form-control(type="date", name="start_date", value=displayStartDate, readonly)
        div.mb-3
          label.form-label(for="end_date") End Date:
          - let displayEndDate = new Date(campaign.end_date).toLocaleDateString()
          input.form-control(type="date", name="end_date", value=displayEndDate, readonly)
        div.mb-3
          label.form-label(for="status") Status:
          input.form-control(type="text", name="status", value=campaign.status)
        div.text-end
          button.btn.btn-info(type="submit", class="mt-3") Save
          a(href=`/get/campaigns/${campaign.id}`, class="btn btn-info mt-3 ms-3") Cancel
